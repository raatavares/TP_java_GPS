<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gps_g33.controller.familiares.marcarHorarioVisitaController">
    <children>
        <TableView fx:id="tableView" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Título" />
                <TableColumn fx:id="startDateColumn" prefWidth="75.0" text="Data Início" />
                <TableColumn fx:id="startTimeColumn" prefWidth="75.0" text="Hora Início" />
                <TableColumn fx:id="endDateColumn" prefWidth="75.0" text="Data Fim" />
                <TableColumn fx:id="endTimeColumn" prefWidth="75.0" text="Hora Fim" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <Button fx:id="bookButton" onAction="#handleBook" text="Marcar Visita" />
            <Button fx:id="MinhasMarcacoesButton" onAction="#handleMinhasMarcacoes" text="Minhas Marcações" />
        </HBox>
        <Label fx:id="infoLabel" prefHeight="18.0" prefWidth="482.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
    </children>
</AnchorPane>
