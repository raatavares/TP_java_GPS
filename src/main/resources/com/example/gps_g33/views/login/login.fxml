<VBox prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gps_g33.LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="224.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
      <children>
        <Label alignment="CENTER" layoutX="212.0" layoutY="77.0" style="&#10;" text="Utilizador" textAlignment="CENTER" wrapText="false">
          <font>
            <Font name="System Bold" size="18.0" />
          </font>
        </Label>
<!--            <GNAvatarView layoutX="211.0" layoutY="14.0" prefHeight="217.0" prefWidth="218.0" strokeWidth="1.0" type="CIRCLE">-->
          <ImageView fitHeight="150" fitWidth="200" layoutX="14.0" layoutY="43.0" preserveRatio="true">
              <image>
                  <Image url="@../../img/login.png" />
              </image>
          </ImageView>
<!--            </GNAvatarView>-->
            <Label alignment="CENTER" layoutX="212.0" layoutY="130.0" style="&#10;" text="Password" textAlignment="CENTER" wrapText="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" layoutX="320.0" layoutY="78.0" promptText="Utilizador" />
            <PasswordField fx:id="passwordField" layoutX="320.0" layoutY="131.0" promptText="Password" />
            <CheckBox fx:id="RememberChoiceBox" layoutX="232.0" layoutY="184.0" mnemonicParsing="false" text="Lembrar-me" />
            <Button fx:id="loginButton" layoutX="363.0" layoutY="180.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="25.0" prefWidth="106.0" style="-fx-background-color: #2196F3;" text="Login" />
            <Label fx:id="lblError" alignment="CENTER_RIGHT" layoutX="215.0" layoutY="213.0" prefHeight="22.0" prefWidth="270.0" textFill="RED" visible="false">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
